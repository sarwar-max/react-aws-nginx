pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/sarwar-max/react-aws-nginx.git'
            }
        }

        stage('Build') {
            steps {
                dir('frontend') {
                    sh 'npm install'
                    sh 'npm run build'
                    archiveArtifacts(artifacts: '**/build/**', fingerprint: true)
                }
            }
        }

        stage('Publish to Artifactory') {
            steps {
                rtServer(
                    id: 'Artifactory',
                    url: 'http://3.142.248.191:8082/artifactory',
                    username: 'sarwar',
                    password: 'Sarwar@1#',
                    bypassProxy: true,
                    timeout: 300
                )

                rtUpload(
                    serverId: 'Artifactory',
                    spec: '''{
                        "files": [
                            {
                                "pattern": "**/build/**",
                                "target": "libs-snapshot-local"
                            }
                        ]
                    }'''
                )
            }
        }

        stage('Deploy to Nginx') {
            steps {
                sh 'scp -r ./frontend/build sammy@18.119.121.70:/var/www/html'
            }
        }
    }

    post {
        success {
            rtPublishBuildInfo(serverId: 'Artifactory')
        }
    }
}
